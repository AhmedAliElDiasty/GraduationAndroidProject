<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="420dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/aDialog"
    android:background="#000"
    android:alpha="0.85"
    >

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cancel"
        android:background="@drawable/rounded_button"
        android:layout_gravity="end"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        android:onClick="exit"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Computer Vision"
        android:textColor="#00abfa"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/start_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Started At :"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/time_Lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 : 30 Am"
            android:textSize="24sp"
            android:textColor="#00abfa"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:src="@drawable/time"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time left :"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:15 "
            android:textSize="24sp"
            android:textColor="#00abfa"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:src="@drawable/student2"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Students :"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="24sp"
            android:textColor="#00abfa"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>


    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/attendance2"
        android:drawablePadding="-10dp"
        android:textSize="17sp"
        android:text="Manual Attendance"
        android:textColor="#FFFFFF"
        />
    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:text="End Session"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"/>
</LinearLayout>