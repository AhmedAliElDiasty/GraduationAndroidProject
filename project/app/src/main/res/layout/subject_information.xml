<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/aDialog"
    android:background="#000"
    android:alpha="0.9">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <com.github.florent37.shapeofview.shapes.CircleView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/instructorImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/albert" />
        </com.github.florent37.shapeofview.shapes.CircleView>
        <TextView
            android:id="@+id/lectureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturename"
            android:textColor="@color/enable_thumb"
            android:textSize="20sp"
            android:layout_marginTop="30dp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lectureNameRow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/instructor2"
            />
        <ImageView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:src="@color/enable_thumb"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/instructorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/enable_thumb"
            android:text="@string/instructor_name"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/startTimeRow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/start_time"
            />
        <ImageView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:src="@color/enable_thumb"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/enable_thumb"
            android:text="@string/start_time"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/timeRow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/time"
            />
        <ImageView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:src="@color/enable_thumb"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/timeToLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/enable_thumb"
            android:text="@string/time"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/Marks"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/marks"
            />
        <ImageView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:src="@color/enable_thumb"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/marksSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/enable_thumb"
            android:text="@string/marks"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hallRow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/attendance_place"
            />
        <ImageView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:src="@color/enable_thumb"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/attendacePlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/enable_thumb"
            android:text="@string/attendance_place"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:textSize="20sp"
    android:text="@string/ok"
    android:textColor="@color/colorWhite"
    android:background="@color/enable_thumb"
    android:layout_marginTop="45dp"
    android:layout_marginLeft="80dp"
    android:layout_marginRight="80dp"

    />




</LinearLayout>