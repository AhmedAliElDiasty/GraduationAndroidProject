<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aDialog"
    android:layout_width="260dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:alpha=".8"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.florent37.shapeofview.shapes.CircleView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/instructorImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/albert" />
        </com.github.florent37.shapeofview.shapes.CircleView>

        <TextView
            android:id="@+id/lectureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/lecturename"
            android:textColor="#fe3536"
            android:textSize="20sp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lectureNameRow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/instructor2" />



        <TextView
            android:id="@+id/instructorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:text="@string/instructor_name"
            android:textColor="#CCCCCC "
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/startTimeRow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/start_time" />

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:text="@string/start_time"
            android:textColor="#CCCCCC"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/timeRow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/timeToLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:text="@string/time"
            android:textColor="#CCCCCC"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Marks"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/marks" />
        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:text="@string/count"
            android:textColor=" #fe3536 "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/marksSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/marks"
            android:textColor="#CCCCCC"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hallRow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/attendance_place" />

        <TextView
            android:id="@+id/attendacePlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:text="@string/attendance_place"
            android:textColor="#CCCCCC"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/okDialog"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="45dp"
        android:background="#000000"
        android:foreground="@drawable/rounded_button3"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/ok"
        android:textColor="@color/colorWhite"

        android:textSize="20sp" />


</LinearLayout>