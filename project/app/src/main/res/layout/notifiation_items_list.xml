<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/CL_layoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CL_image"
                android:layout_width="64dp"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:src="@drawable/student4"
                tools:ignore="RtlSymmetry"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/CL_name"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/image_std"
                android:layout_toRightOf="@+id/image_std"
                android:layout_weight="6"
                android:text="Computer Vision Lecture"
                android:textColor="#ff0000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/CL_message"
                android:layout_width="190dp"
                android:layout_height="43dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/CL_name"
                android:layout_toRightOf="@+id/CL_name"
                android:text="is about to begin,would you like attend?"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_weight="4"/>


        </LinearLayout>

        <View
            android:id="@+id/CL_row"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:weightSum="10">

        <TextView
            android:layout_width="317dp"
            android:layout_height="match_parent"
            android:layout_weight="9" />


        <TextView
            android:id="@+id/CL_time"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="12:01 Am"
            android:textColor="#ff0000" />
    </LinearLayout>


</android.support.v7.widget.CardView>