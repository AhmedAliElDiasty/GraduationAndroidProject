<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="#008BFF"
                android:endColor="#008BFF"
                android:angle="270"/>
            <corners
                android:radius="15dp"/>
            <size
                android:width="29dp"
                android:height="29dp" />
            <stroke
                android:width="1dp"
                android:color="#008BFF"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="#CCCCCC"
                android:endColor="#CCCCCC"
                android:angle="270"/>
            <corners
                android:radius="15dp"/>
            <size
                android:width="29dp"
                android:height="29dp" />
            <stroke
                android:width="1dp"
                android:color="#008BFF"/>
        </shape>
    </item>
</selector>